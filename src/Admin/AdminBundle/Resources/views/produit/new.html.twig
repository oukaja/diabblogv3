{% extends '::base.html.twig' %}

{% block body %}
       <div class="col-lg-6 col-lg-offset-3"> 
        <div class="panel panel-default"> 
            <div class="panel-body"> 
                <table class="table table-hover"> 
                    {{ form_start(form, {'attr': {'class': 'form form-control'}}) }}

                    {{ form_errors(form) }}
                    <tr> 
                        <td> 
                            {{ form_label(form.nom, "nom", {'attr': {'class': ''}}) }}
                            {{ form_errors(form.nom) }}
                        </td>
                        <td>
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                        </td>
                    </tr>
                    <tr> 
                        <td>
                            {{ form_label(form.prix, "prix", {'attr': {'class': ''}}) }}
                            {{ form_errors(form.prix) }}
                        </td>
                        <td>
                            {{ form_widget(form.prix, {'attr': {'class': 'form form-control'}}) }}
                        </td>
                    </tr>
                    <tr> 
                        <td>
                            {{ form_label(form.qte, "qte", {'attr': {'class': ''}}) }}
                            {{ form_errors(form.qte) }}
                        </td>
                        <td>
                            {{ form_widget(form.qte, {'attr': {'class': 'form-control'}}) }}    
                        </td>
                    </tr>
                    
                    <tr>

                        <td class="text text-center" colspan="2">
                            <input class="btn btn-primary" type="submit" value="Create" />
                        </td>
                    </tr>
                    {{ form_end(form) }}
                </table> 
            </div>
        </div>
    </div>
{% endblock %}
